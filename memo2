                <th>数量</th>
                <th>小計</th>
              </tr>
            </thead>

            <%= form_with(model: @order, local: true) do |f| %>
            <% sum_all = 0 %>
            <% @customer.cart_item.each do |cart_item| %>
            <tbody>
              <tr>
                <td>
                  <%= link_to item_path(cart_item.item) do %>
                    <%= attachment_image_tag(cart_item.item, :image, fallback: "no_img.png", size: "50x50") %>
                    <%= cart_item.item.name %>
                  <% end %>
                </td>
                <td>
                  <%= price_with_tax(cart_item.item.price) %>
                </td>
                <td>
                  <%= cart_item.quantity %>
                </td>
                <td>
                  <%= sum_product = price_with_tax(cart_item.product.price).to_i * cart_item.quantity %>円
                  <% sum_all += sum_product %>
                </td>
              </tr>
            </tbody>
            <% end %>
        </table>
      </div>

      <div class="col-3">
        <table class="table table-bordered">
          <tr>
            <th>送料</th>
            <th><%= @order.postage %>円</th>
          </tr>
          <tr>
            <th>商品合計</th>
             <th><%= sum_all %>円</th>
          </tr>
          <tr>
            <th>ご請求額</th>
            <th>
              <% billing_amount = sum_all + @order.postage.to_i %>
              <%= billing_amount %>円
            </th>
          </tr>
        </table>
      </div>

    </div>


    <table class="table">
      <tr>
