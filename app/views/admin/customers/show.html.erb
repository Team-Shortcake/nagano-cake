<div class='container'>
  <div class='row'>
    <div class='col-md-12 col-lg-12 px-sm-0, content'>
    <h3><span class="bg-light"><%= @customer.last_name_kanji %><%= @customer.first_name_kanji %>さんの会員詳細</span></h3>
    <table cellpadding="10">

      <colgroup>
        <col style="width: 25%;">
        <col style="width: 25%;">
        <col style="width: 25%;">
        <col style="width: 25%;">
      </colgroup>
      <tr>
        <td>会員ID</td>
        <td colspan="3"><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>

        <td colspan="3"><%= @customer.last_name_kanji %><%= @customer.first_name_kanji %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td colspan="3"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td colspan="3"><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td colspan="3"><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td colspan="3"><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td colspan="3"><%= @customer.email %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td colspan="3">
          <% if @customer.is_user_status %>
           <div style="color: #CCCCCC">退会</div>
          <% else %>
             <div style="color: green;">有効</div>
          <% end %>
        </td>
      </tr>
      <tr>
        <td></td>
        <td><%= link_to '　編集する　', edit_admin_customer_path(@customer), class: "btn btn-outline-success" %></td>
        <td><%= link_to '　注文履歴一覧を見る　', admin_orders_path, class: "btn btn-outline-primary" %></td>
        <td></td>
      </tr>
    </table>
    </div>
  </div>
</div>

