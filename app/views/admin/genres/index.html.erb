<div class="container">
   <div class="row col-md-7">
        <h3>ジャンル一覧・追加</h3>
          <div class="form-group row">
             <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
　           <%= f.label "ジャンル名" %>
　           <%= f.text_field :name, size: 35 %>
　           <%= f.submit '新規登録', class:"btn btn-success btn-lg" %>
             <% end %>
          </div>

          <table class="table genre-index">
            <h3>ジャンル</h3>
              <% @genres.each do |genre| %>
                   <thead>
                     <tr>
                       <th>
                         <%= genre.name %>
                         <%= link_to '編集する', edit_admin_genre_path(genre), class:"btn btn-success btn-lg" %>
                       </tr>
                   </thead>
              <% end %>
          </table>
    </div>
</div>
