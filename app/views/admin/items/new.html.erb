<div class="container">
  <div class="col-md-9 mx-auto">
      <h3>商品新規登録</h3>
      <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
        <div class="form-inline row mb-3 text-right">
          <%= f.label :image, "商品画像" %>
          <%= f.attachment_field :image %>
        </div>
        <div class="form-inline row mb-3 text-right">
          <%= f.label :name, "商品名" %>
          <%= f.text_field :name, placeholder: "商品名", class: "form-control" %>
        </div>
        <div class="form-inline row mb-3 text-right">
          <%= f.label :explanation, "商品説明" %>
          <%= f.text_area :explanation, placeholder: "ここに説明文を記述します", class: "form-control" %>
        </div>
        <div class="form-inline mb-3 text-right">
          <%= f.label :genre_id, "ジャンル" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, class: "form-control" %>
        </div>
        <div class="form-inline mb-3 text-right">
          <%= f.label :price, "税抜価格" %>
          <%= f.text_field :price, placeholder: "1000", class: "form-control" %>円
        </div>
        <div class="form-inline mb-3">
          <%= f.label :is_order_status, "販売ステータス" %>
          <%= f.radio_button :is_order_status, true %>
          <%= f.label :is_order_status, '販売中', value: true %>
          <%= f.radio_button :is_order_status, false %>
          <%= f.label :is_order_status, '販売停止中', value: false %>
        </div>
           <%= f.submit '新規登録', class:"btn btn-success btn-lg" %>
      <% end %>
  </div>
</div>
