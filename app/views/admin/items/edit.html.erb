<p class="flash" style="color:#ecf1e9;"><%= flash[:notice] %></p>
<div class="container">
  <div class="col-md">

      <h3>商品編集</h3>

      <%= form_with model: @item, url: admin_item_path(@item), local: true do |f| %>
         <div class="form-inline row mb-3 text-right">
          <%= f.label :image, "商品画像" %>
          <%= f.attachment_field :image %>
        </div>
        <div class="form-inline row mb-3 text-right">
          <span style="margin: 8px"><%= f.label :name, "商品名" %></span>
          <%= f.text_field :name, placeholder: "商品名", class: "form-control" %>
        </div>
        <div class="form-inline row mb-3 text-right">
          <%= f.label :explanation, "商品説明" %>
          <%= f.text_area :explanation, placeholder: "ここに説明文を記述します", class: "form-control" %>
        </div>
        <div class="form-inline mb-3 text-right">
          <span style="margin: -10px"><%= f.label :genre_id, "ジャンル" %></span>
          <span style="margin-left: 10px"><%= f.collection_select :genre_id, Genre.all, :id, :name, class: "form-control" %></span>
        </div>
        <div class="form-inline mb-3 text-right">
          <span style="margin: -10px"><%= f.label :price, "税抜価格" %></span>
          <span style="margin-left: 10px"><%= f.text_field :price, placeholder: "1000", class: "form-control" %>円</span>
        </div>
        <div class="form-inline mb-3" style="margin-right: 30px;">
          <span style="margin-right: 25px;"><%= f.label :is_order_status, "販売ステータス" %></span>
          <span style="margin-left: 5px"><%= f.radio_button :is_order_status, true %></span>
          <span style="margin-left: 10px"><%= f.label :is_order_status, '販売中', value: true %></span>
          <span style="margin-left: 30px"><%= f.radio_button :is_order_status, false %></span>
          <span style="margin-left: 10px"><%= f.label :is_order_status, '販売停止中', value: false %></span>
        </div>
        <div style"margin-top: 10px"><%= f.submit '変更を保存', class:"btn btn-outline-success" %></div>
      <% end %>
  </div>

</div>