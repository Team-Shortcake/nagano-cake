<div class="container">
  <div class="row">
    <%= link_to new_admin_item_path do %>
      <i class="fas fa-plus-circle fa-3x new-button"></i>
    <% end %>
    <table class='table table-borderless'>
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
            <% if @is_order_status == true %>
              <p style="color: green;">販売中</p>
            <% else %>
              <p style="color: #CCCCCC">販売停止中</p>
            <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
　</div>
</div>
 