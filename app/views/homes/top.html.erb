    <div id="wrapper">
      <%= render "public/sidebar/sidebar", genres: @genres %>
      <main id="main-area">

        <h4>新着商品</h4>
          <div id="multipale-items">
            <ul class="slider"> <!-- flex-container必要なら記述　-->
              <% @items.each do |item| %><!-- 画像をクリックしたら商品詳細画面へ遷移 -->
                <li>
                  <%= link_to item_path(item) do %>
                  <%= attachment_image_tag item, :image, size: "800x800", fallback: "no_image.jpg" %>
                <% end %>
                <span class="detail-price"><%= item.name %> ¥<%= (item.price*1.1).floor %></span>
                </li>
                  <!--¥ <!-- 税込計算式/.floor => 浮動小数点数の切り捨てを行うためFloatクラスのfloorメソッドを使用 -->
              <% end %>
            </ul>
          </div>
          <div class="text-right">
            <p><%= link_to '全ての商品を見る>', items_path %></p>
          </div>
      </main>

