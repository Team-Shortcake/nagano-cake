<div class="container">
  <div class="col-md-6 mx-auto text-center">

  <h2>ログイン</h2>
  <%= form_with model: @customer, url: customer_session_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>

    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div><br>


    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %><br>
  <p>会員登録がお済みでない方</p>
  <%= render "customers/shared/links" %>

  </div>
</div>

<style>
  h2 {
    margin-top: 20px;
    margin-bottom: 30px;
  }
</style>