<script type="text/javascript" src="//jpostal-1006.appspot.com/jquery.jpostal.js"></script>
<h2>新規登録</h2>
<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>

  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :"(姓)" %><br />
    <%= f.text_field :first_name_kanji, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"(名)" %><br />
    <%= f.text_field :last_name_kanji, autofocus: true %>
  </div>
    <div class="field">
    <%= f.label :"(セイ)" %><br />
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>
    <div class="field">
    <%= f.label :"(メイ)" %><br />
    <%= f.text_field :last_name_kana, autofocus: true %>
  </div>
  <!--名前ここまで-->



  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号(ハイフンナシ)" %><br>
    <%= f.text_field :postal_code %>
  </div>

    <div class="field">
    <%= f.label :住所 %><br>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :"電話番号(ハイフンナシ)" %><br>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %>文字以上)
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>
