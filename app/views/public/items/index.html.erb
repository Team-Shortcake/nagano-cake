<div class="container">
  <div class="row">
    <%= render "public/sidebar/sidebar", genres: @genres %>
    
    <!-- 商品一覧 -->
    <div class="col-xs-1">
    </div>
    
  	<div class="col-xs-9">
  	  <h2><i class="fas fa-cookie-bite"></i>商品一覧<span style="font-size:20px;">（全<%= @quantity %>件）</span></h2><br>
  	    <div class="row">
  	      <% @items.each do |item| %>
  	      <div class="box" style="float: left; margin-right: 20px;">
  	        <%= link_to item_path(item.id) do %>
  	          <%= attachment_image_tag item, :image, size: "170x170", fallback: "no_image.jpg" %><br>
  	        <% end %>
  	        <p><%= item.name %></p>
  	        <p>¥<%= (item.price*1.1).floor %></p>
  	      </div>
  	      <% end %>
  	    </div>
        <div class="col-xs-6 col-xs-offset-4 ">
          <!-- ページネーション用記載.コントローラに何項目ごとにページを分けるか記載 -->
          <%= paginate @items %>
        </div>
  	</div>
  </div>
</div>