<div id="wrapper">
  <%= render "public/sidebar/sidebar", genres: @genres %>
  <main id="main-area">
  <h2>
    <i class="fas fa-cookie-bite"></i>商品一覧<span style="font-size:20px;">（全<%= @quantity %>件）</span>
    </h2>
      <!--<div class="row">-->
      <ul  class="item-container">
        <% @items.each do |item| %>
          <li>
            <div class="image-wrap">
            <%= link_to item_path(item.id) do %>
              <%= attachment_image_tag item, :image, fallback: "no_image.jpg" %><br>
            <% end %>
            <%= item.name %>  ¥<%= (item.price*1.1).floor %>
            </div>
          </li>
      <% end %>
      </ul>
      <!--</div>-->
      <!--<div class="col-xs-6 col-xs-offset-4 ">-->
       　<%= paginate @items %><!-- ページネーション用記載.コントローラに何項目ごとにページを分けるか記載 -->
      <!--</div>-->
  </main>
</div>

