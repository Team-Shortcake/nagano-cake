<div class="container">
  <div class="row">
    <!-- ジャンル検索バー -->


    <div class="col-xs-9">
      <div class="row" style="margin-top: 50px;">
        <%= attachment_image_tag @item, :image, size: "300x300", fallback: "no_image.jpg" %>
      </div>

      <div style="width:400px; height:300px; float:left;">
        <h3 style="color: white;"><%= @item.item_name</h3><br>
        <p><%= @item.explanation %></p>
        <p class ="price">¥<%= (@item.unit_price_without_tax*1.1).foor %><span style="font-size:12px;">(税込)</span></p>
      </div>
    </div>

    <div class="col-xs-7">
      <%= image_tag ""%>
    </div>
    <div class="col-xs-5">
      <strong class="error"><%= notice %></strong>
      <%= form_with model:@cart_item, url cart_item_path(@cart_item), local:true do |f| %>
      <%= f.hidden_field :item_id , :value => @item.id %>
      <!-- f.selectでも可。placeholderで空欄時に個数選択を表示。選択数の最低値を設定するためにminを設定。 -->
      <%= f.number_field :number_of_items , placeholder: "個数選択", min: 1, max: 20 %>
      <%= f.submit "カートに入れる" ,class: 'btn-primary' %>
      <% end %>
    </div>
  </div>
</div>