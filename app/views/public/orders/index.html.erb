<div class="container">
  <h2><i class="fas fa-file-invoice"></i>注文履歴一覧</h2>
  <table class="table table-striped table-bordered">
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
    <% @order.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= order.delivery_address %></td>
      <td><% order.order_details.each do |order_item| %>
          <%= order_item.item.name %>
      <% end %>
      </td>
      <td><%= order.total_price %>円</td>
      <td><%= order.order_status %></td>
      <td><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
    </tr>
  <% end %>
  </table>
</div>