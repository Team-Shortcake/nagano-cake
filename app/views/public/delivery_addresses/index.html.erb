<div class="container">
   <h1>配送先登録／一覧</h1>
   <%= form_with model: @delivery_address, url: delivery_addresses_path, local: true, method: :POST do |f| %>
   <table class="table border-0">
       <tr>
         <td>郵便番号(ハイフンなし)</td>
         <td><%= f.text_field :postal_code, placeholder: "0000000" %></td>
         
       </tr>
       
       <tr>
         <td>住所</td>
         <td><%= f.text_field :address, autofocus: true, autocomplete: "address", :size => "40*40", placeholder: "長野県長野市" %></td>
       </tr>
       
       <tr>
         <td>宛名</td>
         <td><%= f.text_field :name, placeholder: "山田　太郎" %></td>
         <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
       </tr>
    
   </table>
   <% end %>
   <table class="table table-bordered">
       <thead>
           <tr>
               <th>郵便番号</th>
               <th>住所</th>
               <th>宛名</th>
               <th></th>
           </tr>
       </thead>
       <tbody>
       <% @delivery_addresses.each do |delivery| %>
           <tr>
               <th><%= delivery.postal_code %></th>
               <td><%= delivery.address %></td>
               <td><%= delivery.name %></td>
               <td>
                 <%= link_to "編集する", edit_delivery_address_path(delivery), class: "btn btn-success" %>
                 <%= link_to "削除する", delivery_address_path(delivery), method: :delete, class: "btn btn-danger" %>
               </td>
           </tr>
       <% end %>
       </tbody>
   </table>
 </div>