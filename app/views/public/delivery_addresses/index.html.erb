<div class="container">
   <h1>配送先登録／一覧</h1>
   <%= form_with model: @delivery_address, url: delivery_addresses_path, local: true, method: :POST do |f| %>

     <div class="field">
       <%= f.label :"郵便番号(ハイフンナシ)" %><br>
       <%= f.text_field :postal_code, placeholder: "0000000" %>
     </div>

     <div class="field">
       <%= f.label :"住所" %><br>
       <%= f.text_field :address, autofocus: true, autocomplete: "address", :size => "40*40", placeholder: "長野県長野市" %>
     </div>

     <div class="field">
       <%= f.label :"宛名" %><br>
       <%= f.text_field :name, placeholder: "山田　太郎" %>
     </div>

     <div class="actions">
       <%= f.submit "新規登録" %>
     </div>
   <% end %>
   <table class="table table-bordered">
       <thead>
           <tr>
               <th>郵便番号</th>
               <th>住所</th>
               <th>宛名</th>
               <th></th>
           </tr>
       </thead>
       <tbody>
       <% @deliveryes.each do |delivery| %>
           <tr>
               <th><%= delivery.postal_code %></th>
               <td><%= delivery.address %></td>
               <td><%= delivery.name %></td>
               <td>
                 <%= link_to "編集する", edit_delivery_address_path(delivery), class: "btn btn-primary" %>
                 <%= link_to "削除する", delivery_addresses_path(delivery), method: :DELETE, class: "btn btn-danger" %>
               </td>
           </tr>
       <% end %>
       </tbody>
   </table>
 </div>