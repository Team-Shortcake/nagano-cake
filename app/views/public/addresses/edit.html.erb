<div class="container">
  <h1>配送先編集</h1>
  <%= form_with model: @address, url: address_path, local: true do |f| %>
    <div class="field">
      <%= f.label :"郵便番号(ハイフンナシ)" %><br>
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000" %>
    </div>
  
    <div class="field">
      <%= f.label :"住所" %><br>
      <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "長野県長野市" %>
    </div>
  
    <div class="field">
      <%= f.label :"宛名" %><br>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "山田　太郎" %>
    </div>
  
    <div class="actions">
      <%= f.submit "変更内容を保存", class: "btn btn-success" %>
    </div>
  <% end %>
  </div>