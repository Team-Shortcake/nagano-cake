<div class="container">
  <div class="row">
    <div class="col-xs-10">
      <h2><i class="fas fa-shopping-cart"></i>ショッピングカート</h2>
    </div>
    <div class="col-xs-2">
      <div><%= link_to "カートを空にする", cart_item_destroy_all_path(@cart_items), method: :delete, class:"btn-danger" %></div>
    </div>
  </div>

  <div class="row">
    <h4><%= notice %></h4>
    <table class="tabule-bordered">
      <tr>
        <th id="item-name">商品名</th>
        <th style="width: 180px;">単価（税込）</th>
        <th style="width: 180px;">数量</th>
        <th style="width: 180px;">小計</th>
        <th style="width: 180px;"></th>
      </tr>
      
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= link_to item_path(cart_item.item_id) do %>
            <%= attachment_image_tag(cart_item.item, :image, fallback: "no_image.jpg", size: "50x50", class: "item-img") %>
            <%= cart_item.item.name %>
          <% end %>
        </td>
        <td>
          <%= (cart_item.item.price*1.1).floor %>
        </td>
        <td>
          <%= form_with model:cart_item, local:true do |f| %>
          <%= f.number_field :quantity, min:1, max: 20 %>  <%= f.submit "変更" ,class:"btn btn-primary btn-xs" %>
          <% end %>
        </td>
        <td>
          <%= ((cart_item.item.price*1.1).floor*cart_item.quantity) %>
          <!--each文の小計を@totalに代入 => 代入演算子。コントローラーで@totalに整数利用できるよう初期値0を設定している。-->
          <% @total += ((cart_item.item.price*1.1).floor*cart_item.quantity) %>
        </td>
        <td>
          <div style="margin-left: 50px;">
            <%= link_to "削除する", cart_item_path(cart_item), method: :delete, class:"btn btn-danger" %>
          </div>
        </td>
      </tr>
      <% end %>
    </table>

  </div>

   <div class="row">
    <div class="col-xs-9">
      <div style="margin-top:50px;"><%= link_to "買い物を続ける", root_path, class:"btn btn-primary" %></div>
    </div>

  <div class="row">
    <div class="col-xs-3">
      <div class="total-price-box">
        <div class="total-price">合計金額</div>
        <div class="total-price"><%= @total %></div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-4"></div>
    <div class="col-xs-4 cart_continue_to_order">
      <%= link_to "情報入力に進む", orders_confirm_path, class: "btn btn-success btn-lg" %>
    </div>
    <div class="col-xs-4"></div>
  </div>

</div>
