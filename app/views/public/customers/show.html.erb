<div class="container">
  <h1>🍴マイページ🍰</h1>
  <h2>登録情報</h2>
  <%= link_to "編集する", edit_customer_path %>
  <table class="table table-bordered table-condensed">
    <tbody>
      <tr>
        <td>氏名</td>
        <td>
          <%= @customer.first_name_kanji %>
          <%= @customer.last_name_kanji %>
        </td>
      </tr>
      <tr>
        <td>カナ</td>
        <td>
          <%= @customer.first_name_kana %>
          <%= @customer.last_name_kana %>
          </td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td>
          <%= @customer.postal_code %>
        </td>
      </tr>
      <tr>
        <td>住所</td>
        <td>
          <%= @customer.address %> 
        </td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td>
          <%= @customer.telephone_number %>
        </td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td>
          <%= @customer.email %>
        </td>
      </tr>
    </tbody>
  </table>
  <h2>配送先</h2>
  <%= link_to "一覧を見る", addresses_path %>
  <h2>注文履歴</h2>
  <%= link_to "一覧を見る", orders_path %>
</div>