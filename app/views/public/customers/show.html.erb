<div class="container">

   <h1>🍴マイページ🍰</h1>
   <h2>登録情報 <%= link_to "編集する", edit_customer_path, class: "btn btn-success" %></h2>
   
   <table class="table table-bordered table-condensed">

   <div class="main">
   <h2>🍴マイページ🍰</h3>
   <div class="d-flex flex-row bd-highlight">
   <div class="p-2 bd-highlight"><h4>登録情報</h4></div>
   <div class="p-2 bd-highlight"><%= link_to "編集する", edit_customer_path, class:"btn btn-outline-success" %></div>
   </div>

   <table align="center" class="table table-bordered border-warning border-4 w-0 p-3">

     <tbody>
       <tr>
         <td>氏名</td>
         <td>
           <%= @customer.first_name_kanji %>
           <%= @customer.last_name_kanji %>
         </td>
       </tr>
       <tr>
         <td>カナ</td>
         <td>
           <%= @customer.first_name_kana %>
           <%= @customer.last_name_kana %>
           </td>
       </tr>
       <tr>
         <td>郵便番号</td>
         <td>
           <%= @customer.postal_code %>
         </td>
       </tr>
       <tr>
         <td>住所</td>
         <td>
           <%= @customer.address %>
         </td>
       </tr>
       <tr>
         <td>電話番号</td>
         <td>
           <%= @customer.telephone_number %>
         </td>
       </tr>
       <tr>
         <td>メールアドレス</td>
         <td>
           <%= @customer.email %>
         </td>
       </tr>
     </tbody>
   </table>

   <p><strong>配送先　　</strong><%= link_to "一覧を見る", delivery_addresses_path, class:"btn btn-primary" %>
