<div class="container">
  <h2 class="head-line title_h2 text-center">登録情報編集</h2>
  <%= form_with model: @customer, url: customer_path, local: true, method: :PATCH do |f| %>
  <div class="form-group">
    <%= f.label :"氏名" %>
    <%= f.text_field :last_name_kanji %>
    <%= f.text_field :first_name_kanji %>
  </div>
  <div class="form-group">
    <%= f.label :"フリガナ" %>
    <%= f.text_field :first_name_kana %>
    <%= f.text_field :last_name_kana %>
  </div>
  <div class="form-group">
    <%= f.label :"郵便番号" %>
    <%= f.text_field :postal_code %>
  </div>
  <div class="form-group">
    <%= f.label :"住所" %>
    <%= f.text_field :address %>
  </div>
  <div class="form-group">
    <%= f.label :"電話番号" %>
    <%= f.text_field :telephone_number %>
  </div>
  <div class="form-group">
    <%= f.label :"メールアドレス" %>
    <%= f.text_field :email %>
  </div>
  
  <div class="actions">
    <%= f.submit "編集内容を保存" %>
    <!--退会ボタン-->
    <%= link_to '退会する', customers_quit_confirmation_path(@customer), class:'btn btn-secondary withdraw-btn' %>
  
  </div>
  <% end %>
    <!--退会ボタン-->

</div>
